<div class="row">
	<Input Name="text_input_example" Label="Text Input" MaxLength="10" Callback="((e) => inputCallback(e))" />
</div>

<div class="row">
	<Input Name="text_input_with_timeout_example" Label="Text Input" MaxLength="10" Timeout="1500" Callback="((e) => inputCallback(e))" />
</div>

<div class="row">
	<Input Type="InputTypes.Number" Name="number_input_example" Label="Number Input" MaxLength="10" Callback="((e) => inputCallback(e))" />
</div>

@code {
	private IEnumerable<string> _dropdownItems;

	protected override async Task OnParametersSetAsync()
	{
		_dropdownItems = new List<string>
		{
			"Item 1",
			"Item 2"
		};

		await base.OnParametersSetAsync();
	}

	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		await base.OnAfterRenderAsync(firstRender);
	}

	private void inputCallback(object val)
	{
		var meh = val;
	}
}
