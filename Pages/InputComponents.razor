@page "/input"

<h3>Input Components</h3>

<div class="row">
	<Input Type="InputTypes.Dropdown" Name="dropdown_example" Label="Dropdown Input" Callback="((e) => inputCallback(e))">
		<Content>
			@foreach(var item in _dropdownItems)
			{
				<option>@item</option>
			}
		</Content>
	</Input>
</div>

